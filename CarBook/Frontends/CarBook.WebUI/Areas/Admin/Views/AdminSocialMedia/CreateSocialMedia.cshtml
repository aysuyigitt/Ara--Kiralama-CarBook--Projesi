@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal medya Sayfası Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Sosyal medya hesaplarınız veri girişlerini buradan yapabilirsiniz.
                        </p>
                        <form method="post">

                            <div class="form-group">
                                <label for="exampleInputTitle">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Hizmet Başlığını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">URL</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Url" placeholder="Sosyal Medya Sayfanızın URL Linkini Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Sosyal Medya İkon</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Icon" placeholder="Sosyal Medya İkon Bilgisini Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>


</div>








