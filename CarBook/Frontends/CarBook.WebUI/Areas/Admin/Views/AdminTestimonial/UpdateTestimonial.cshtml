@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Sayfası Veri Düzenleme Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Bu sayfa, referans düzenleme işlemlerinin gerçekleştirilebileceği ve müşterilerimizle ilgili bilgilerin düzenlenebileceği bir alandır.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialID" />
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="eferans Adı ve Soyadını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputTitle">Referans Unvanı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Referans Unvanını Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" asp-for="ImageUrl" placeholder="Görsel Seçiniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Referans Yorumu</label>
                                <textarea rows="5" class="form-control" asp-for="Comment" placeholder="Yorumunuzu Buraya Bırakabilirsiniz"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Güncelleme</button>
                        </form>

                    </div>
                </div>


            </div>

        </div>


    </div>


</div>











