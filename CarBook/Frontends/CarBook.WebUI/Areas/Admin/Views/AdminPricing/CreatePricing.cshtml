@model CreatePricingDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Ödeme Periyodu Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Ana Sayfanın ödeme periyodu alanına  veri girişini aşağıdaki panelden yapabilirsiniz.
                        </p>
                       <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Ödeme Periyodu Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Name" placeholder="Ödeme Periyot Adını Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Ödeme Peiryot Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>








